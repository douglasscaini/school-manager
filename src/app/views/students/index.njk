{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">

        <div class="header">
            <a class="button" href="/students/create">Novo</a>
            <form action="/students" method="GET">
                <input type="text" name="filter" placeholder="Nome ou email..." value="{{filter}}">
                <button type="submit">Filtrar</button>
            </form>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Aluno</th>
                    <th>Ano escolar</th>
                    <th>Horas semanais</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>

                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background-image: url({{student.avatar_url}})"></span>{{student.name}}</td>
                        <td>{{student.education_year}}</td>
                        <td>{{student.hours_studied}} horas semanais</td>
                        <td>
                            <a href="/students/{{student.id}}">Exibir</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>

        <div class="pagination" data-page="{{pagination.page}}" data-total="{{pagination.total}}" data-filter="{{filter}}"></div>

    </div>

{% endblock %}