{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">

        <div class="header">
            <a class="button" href="/teachers/create">Novo</a>
            <form action="/teachers" method="GET">
                <input type="text" name="filter" placeholder="Nome ou área de atuação..." value="{{filter}}">
                <button type="submit">Filtrar</button>
            </form>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Professor</th>
                    <th>Matérias de atuação</th>
                    <th>Tipo da aula</th>
                    <th>Qtd. de alunos</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>

                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{teacher.avatar_url}})"></span>{{teacher.name}}</td>
                        <td>{{teacher.subjects_taugth}}</td>
                        <td id="td-align">{{teacher.class_type}}</td>
                        <td id="td-align">{{teacher.total_students}}</td>
                        <td>
                            <a href="/teachers/{{teacher.id}}">Exibir</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>

        <div class="pagination" data-page="{{pagination.page}}" data-total="{{pagination.total}}" data-filter="{{filter}}"></div>
        
    </div>

{% endblock %}