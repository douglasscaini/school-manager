{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">
        <a href="/teachers/create">Novo</a>
        <table>
            <thead>
                <tr>
                    <th>Professor</th>
                    <th>Matérias de atuação</th>
                    <th>Tipo da aula</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>

                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{teacher.avatar_url}})"></span>{{teacher.name}}</td>
                        <td>{{teacher.services}}</td>
                        <td>{{teacher.class_type}}</td>
                        <td>
                            <a href="/teachers/{{teacher.id}}">Exibir</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}