{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">
        <a href="/students/create">Novo</a>
        <table>
            <thead>
                <tr>
                    <th>Aluno</th>
                    <th>Ano escolar</th>
                    <th>Horas semanais</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>

                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background-image: url({{student.avatar_url}})"></span>{{student.name}}</td>
                        <td>{{student.year}}</td>
                        <td>{{student.time}} horas semanais</td>
                        <td>
                            <a href="/students/{{student.id}}">Exibir</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}